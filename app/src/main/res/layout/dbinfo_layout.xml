<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#98f7a706">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dbinfo"
        android:id="@+id/textView8"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#304ffe"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:contentDescription="@string/dbhere"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:minHeight="50dp"
        android:src="@drawable/dbhere2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dbinfo3"
        android:id="@+id/textView10"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="#d13906"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dbinfo4"
        android:id="@+id/textView11"
        android:textAlignment="center"
        android:textColor="#0cd735"
        android:textSize="18sp"
        android:autoLink="web"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dbinfo2"
        android:id="@+id/textView9"
        android:textSize="22sp"
        android:textColor="#fd0505"
        android:textAlignment="center"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true" />

    <Button android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true">
        <requestFocus/>
    </Button>


</RelativeLayout>